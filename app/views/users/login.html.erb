<% provide(:title, "Login") %>

<h2>User Login</h2>

<div id="main_layout">
  <form action="users/welcome" method="post">
    <div id="left_layout">
        Username:<br>
        <input type="text" name="username"><br><br>
        Password:<br>
        <input type="password" name="password"><br><br><br>
    </div>

    <div id="bottom_layout">
      <input class="button" type="submit" value="Login">
      <button class="button" onclick="location.href='/users/registration'; return false;">Register</button>
    </div>
  </form> 
</div>