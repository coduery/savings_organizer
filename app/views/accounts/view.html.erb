<% provide(:title, "View Account") %>

<h2>View Account</h2>

<%= render "shared/flash" %>

<div id="main_layout">

  <%= render "shared/menu" %>

  <div id="center_private_layout">

    <% if !@account_names.nil? %>

      <%= form_tag(accounts_view_path) do %>

        <span class="span_left_align">* Selected Savings Account:</span>
        <span class="span_right_align"><%= select_tag "account_name",
          options_for_select(@account_names, session[:account_name]), onchange: "this.form.submit();" %>
        </span><br><br>

        <% if @category_names.size > 0 %>

          <span class="span_left_align">Account Total Savings: $ <%= number_with_precision(@account_total, precision: 2) %></span><br><br>

          <div id="data_table" data-number_categories="3">

            <table>
              <thead>
                <tr>
                  <th class="data_columns">Category</th>
                  <th class="data_columns">Savings</th>
                </tr>
              </thead>

              <tfoot>
                <tr>
                  <td class="data_columns">Total</td>
                  <td class="data_columns"><span class="span_right_align_table">
                    $&nbsp<%= number_with_precision(@account_total, precision: 2) %></td>
                  </span>
                </tr>
              </tfoot>

              <tbody>
                <% @category_names.each do |category_name| %>
                  <tr>
                    <td><span class="span_left_align_table"><%= category_name %></span></td>
                    <td><span class="span_right_align_table">$&nbsp<%= number_with_precision(@category_name_savings_amount_mapping[category_name.to_sym], precision: 2) %></span></td>
                    <td class="table_button_cell"><%= submit_tag "Update", disabled: true, name: "update[#{@category_name_id_mapping[category_name]}]", class: "table_button" %></td>
                    <td class="table_button_cell"><%= submit_tag "Delete", name: "delete[#{@category_name_id_mapping[category_name]}]", data: {confirm: "Warning! \nYou are about to delete your #{category_name} \ncategory and all its entries. \n\nProceed with Deleting Category?" }, class: "table_button" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        <% end %>
      <% end %>
    <% end %>

  </div>

</div>