<% provide(:title, "View Category") %>

<h2>View Category</h2>

<% if flash[:alert] %>
  <div id="error_notice">
    <h3><%= flash[:alert] %></h3>
  </div>
<% end %>

<% if flash[:notice] %>
  <div id="success_notice">
    <h3><%= flash[:notice] %></h3>
  </div>
<% end %>

<div id="main_layout">

  <%= render "shared/menu" %>

  <div id="center_private_layout">
      
    <% if !@account_names.nil? %>
      
      <%= form_tag(categories_view_path) do %>
  
        <span class="span_left_align">* Selected Savings Account:</span>
        <span class="span_right_align"><%= select_tag "account_name", 
          options_for_select(@account_names, session[:account_name]), onchange: "this.form.submit();" %>
        </span><br><br>
        
        <% if @category_names.size > 0 %>
        
          <span class="span_left_align">* Selected Category:</span>
          <span class="span_right_align"><%= select_tag "category_name", 
            options_for_select(@category_names, session[:category_name]), onchange: "this.form.submit();" %>
          </span><br><br>
          
          <span class="span_left_align">Category Total Savings: $ <%= number_with_precision(@category_balance, precision: 2) %></span><br><br>
          
          <div id="entries_table" data-number_categories="3">
          
            <table>
              <thead>
                <tr>
                  <th class="entries_columns">Date</th>
                  <th class="entries_columns">Deduction</th>
                  <th class="entries_columns">Addition</th>
                </tr>
              </thead>
              
              <% @category_entries.each do |category_entry| %>    
                <tr>
                  <td><%= category_entry[:entry_date].strftime("%-m/%-d/%Y") %></td>
                  <% if category_entry[:entry_amount] < 0 %>
                    <td><span class="span_right_align_table">$&nbsp<%= number_with_precision(category_entry[:entry_amount], precision: 2) %></span></td>
                    <td><span class="span_right_align_table">-</span></td>
                  <% else %>
                    <td><span class="span_right_align_table">-</span></td> 
                    <td><span class="span_right_align_table">$&nbsp<%= number_with_precision(category_entry[:entry_amount], precision: 2) %></span></td>              
                  <% end %>
                  <td><%= submit_tag "Update Entry", disabled: true, name: "update[#{category_entry[:id]}]" %></td>
                  <td><%= submit_tag "Delete Entry", name: "delete[#{category_entry[:id]}]", data: {confirm: "Proceed with Deleting Entry?" } %></td>             
                </tr>
              <% end %>
              
              <tfoot>
                <tr>
                  <td class="entries_columns">Totals</td>
                  <td class="entries_columns"><span class="span_right_align_table">
                    $&nbsp<%= number_with_precision(@deduction_category_entries_total, precision: 2) %>
                    </span>
                  </td>
                  <td class="entries_columns"><span class="span_right_align_table">
                    $&nbsp<%= number_with_precision(@addition_category_entries_total, precision: 2) %></td>
                  </span>
                </tr>
              </tfoot>
            </table> 
          
          </div>       
        <% end %>        
      <% end %>
    <% end %>
  
  </div>
  
</div>